{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "module": "ESNext",
        "target": "ES2020",
        "moduleResolution": "Node",
        "jsx": "react-jsx",
        "checkJs": true,
        "allowImportingTsExtensions": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
    ]
}
